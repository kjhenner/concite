{
  "random_seed": std.parseInt(std.extVar("SEED")),
  "pytorch_seed": std.parseInt(std.extVar("PYTORCH_SEED")),
  "numpy_seed": std.parseInt(std.extVar("NUMPY_SEED")),
  "dataset_reader": {
    "type": "acl_graph_reader",
    "label_field": std.extVar("LABEL_FIELD"),
    "text_field": "abstract",
    "token_indexers": {
      "bert": {
        "type": "bert-pretrained",
        "pretrained_model": std.extVar("BERT_VOCAB"),
        "do_lowercase": false,
        "use_starting_offsets": true
      }
    }
  },
  "train_data_path": std.extVar("TRAINING_DATA"),
  "validation_data_path": std.extVar("DEV_DATA"),
  "test_data_path": std.extVar("TEST_DATA"),
  "evaluate_on_test": false,
  "model": {
    "type": "acl_gat_classifier",
    "verbose_metrics": true,
    "node_embedder": {
      "type": "embedding",
      "embedding_dim": std.parseInt(std.extVar("EMBEDDING_DIM")),
      "pretrained_file": std.extVar("PRETRAINED_FILE"),
      "vocab_namespace": "paper_ids"
    },
    "text_field_embedder": {
      "allow_unmatched_keys": true,
      "embedder_to_indexer_map": {
        "bert": ["bert", "bert-offsets"]
      },
      "token_embedders": {
        "bert": {
          "type": "bert-pretrained",
          "pretrained_model": std.extVar("BERT_WEIGHTS"),
          "top_layer_only": true
        }
      }
    },
    "classifier_feedforward": {
      "input_dim": 896,
      "num_layers": 2,
      "hidden_dims": [50, 25],
      "activations": ["relu", "linear"],
      "dropout": [0.25, 0.0]
    },
    "edge_path": std.extVar("EDGE_PATH")
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["text", "num_tokens"]],
    "batch_size": 1,
    "cache_instances": true
  },
  "trainer": {
    "num_epochs": 2,
    "grad_clipping": 5.0,
    "patience": 10,
    //"validation_metric": "+average_F1",
    "num_serialized_models_to_keep": 1,
    "cuda_device": std.parseInt(std.extVar("CUDA_DEVICE")),
    "optimizer": {
      "type": "bert_adam",
      "lr": 1e-5,
      "t_total": -1,
      "max_grad_norm": 1.0,
      //"weight_decay": 0.01,
      "parameter_groups": [
        [["bias", "LayerNorm.bias", "LayerNorm.weight", "layer_norm.weight"], {"weight_decay": 0.0}]
      ]
    },
    "should_log_learning_rate": true,
    "learning_rate_scheduler": {
      "type": "slanted_triangular",
      "num_epochs": 15,
      "num_steps_per_epoch": 2
    }
  }
}

