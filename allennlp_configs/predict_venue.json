{
  "dataset_reader": { "type": "pubmed_document_dataset_reader",
    "token_indexers": {
      "bert": {
        "type": "bert-pretrained",
        "pretrained_model": std.extVar("BERT_VOCAB"),
        "do_lowercase": true,
        "use_starting_offsets": true
      }
    }
  },
  "train_data_path": "data/intermediate/train_n2v_pubmed_articles.jsonl",
  "validation_data_path": "data/intermediate/dev_n2v_pubmed_articles.jsonl",
  "test_data_path": "data/intermediate/test_n2v_pubmed_articles.jsonl",
  "evaluate_on_test": false,
  "model": {
    "type": "venue_classifier",
    "verbose_metrics": false,
    "graph_vector_dim": 128,
    "text_field_embedder": {
      "allow_unmatched_keys": true,
      "embedder_to_indexer_map": {
        "bert": ["bert", "bert-offsets"]
      },
      "token_embedders": {
        "bert": {
          "type": "bert-pretrained",
          "pretrained_model": std.extVar("BERT_WEIGHTS"),
          "requires_grad": false,
          "top_layer_only": true
        }
      }
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["abstract", "num_tokens"]],
    "batch_size": 8,
    "cache_instances": true
  },
  "trainer": {
    "num_epochs": 10,
    "grad_clipping": 5.0,
    "patience": 3,
    "validation_metric": "+average_F1",
    "cuda_device": 6,
    "optimizer": {
      "type": "bert_adam",
      "lr": 1e-5,
      "t_total": -1,
      "max_grad_norm": 1.0,
      //"weight_decay": 0.01,
      "parameter_groups": [
        [["bias", "LayerNorm.bias", "LayerNorm.weight", "layer_norm.weight"], {"weight_decay": 0.0}]
      ]
    },
    "should_log_learning_rate": true
  }
}

