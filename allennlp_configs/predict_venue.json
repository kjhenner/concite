{
  "dataset_reader": {
    "type": "pubmed_document_dataset_reader",
    "token_indexers": {
      "bert": {
        "type": "bert-pretrained",
        "pretrained_model": std.extVar("BERT_VOCAB"),
        "do_lowercase": true,
        "use_starting_offsets": true
      },
      "token_characters": {
        "type": "characters",
        "min_padding_length": 3
      }
    }
  },
  "train_data_path": "data/intermediate/train_n2v_pubmed_articles.jsonl",
  "validation_data_path": "data/intermediate/dev_n2v_pubmed_articles.jsonl",
  "test_data_path": "data/intermediate/test_n2v_pubmed_articles.jsonl",
  "evaluate_on_test": false,
  "model": {
    "type": "venue_classifier",
    "verbose_metrics": true,
    "text_field_embedder": {
      "allow_unmatched_keys": true,
      "embedder_to_indexer_map": {
        "bert": ["bert", "bert-offsets"],
        "token_characters": ["token_characters"]
      },
      "token_embedders": {
        "bert": {
          "type": "bert-pretrained",
          "pretrained_model": std.extVar("BERT_WEIGHTS")
        },
        "token_characters": {
          "type": "character_encoding",
          "embedding": {
            "embedding_dim": 16
          },
          "encoder": {
            "type": "cnn",
            "embedding_dim": 16,
            "num_filters": 128,
            "ngram_filter_sizes": [3],
            "conv_layer_activation": "relu"
          }
        }
      }
    },
    "text_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 896,
      "hidden_size": 200,
      "num_layers": 2,
      "dropout": 0.5
    },
    "classifier_feedforward": {
      "input_dim": 528,
      "num_layers": 2,
      "hidden_dims": [50, 25],
      "activations": ["relu", "linear"],
      "dropout": [0.25, 0.0]
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["abstract", "num_tokens"]],
    "batch_size": 8
  },
  "trainer": {
    "num_epochs": 30,
    "patience": 10,
    "cuda_device": -1,
    "grad_clipping": 5.0,
    "validation_metric": "+average_F1",
    "optimizer": {
      "type": "adam",
      "lr": 1e-5
    }
  }
}

