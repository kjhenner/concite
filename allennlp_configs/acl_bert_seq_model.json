{
  "dataset_reader": {
    "type": "aclarc_trace_dataset_reader",
    "text_lookup_path": "/shared-1/projects/concite/data/arc-paper-ids.tsv",
    "embedded_text": "title",
    "sent_len_limit": 128,
    "abstract_indexers": {
      "bert": {
        "type": "bert-pretrained",
        "pretrained_model": std.extVar("BERT_VOCAB"),
        "do_lowercase": true,
        "use_starting_offsets": true
      }
    }
  },
  "train_data_path": "data/train_acl_citation_sequences_raw.txt",
  "validation_data_path": "data/dev_acl_citation_sequences_raw.txt",
  "test_data_path": "data/test_acl_citation_sequences_raw.txt",
  "evaluate_on_test": false,
  "model": {
    "type": "bert_sequence_model",
    "dropout": 0.5,
    "seq_embedder": {
      "allow_unmatched_keys": true,
      "embedder_to_indexer_map": {
        "tokens": ["tokens"]
      },
      "token_embedders": {
        "tokens": {
          "embedding_dim": 128,
          "pretrained_file": "data/citation_sequence_embeddings.emb"
        }
      }
    },
    "abstract_text_field_embedder": {
      "allow_unmatched_keys": true,
      "embedder_to_indexer_map": {
        "bert": ["bert", "bert-offsets"]
      },
      "token_embedders": {
        "bert": {
          "type": "bert-pretrained",
          "pretrained_model": std.extVar("BERT_WEIGHTS"),
          "requires_grad": "11, 10, 9, 8, 7",
          "top_layer_only": true
        }
      }
    },
    "contextualizer": {
      "type": "rnn",
      "input_size": 896,
      "hidden_size": 256
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size": 8,
    "cache_instances": false
  },
  "trainer": {
    "num_epochs": 55,
    "grad_clipping": 5.0,
    "patience": 3,
    "cuda_device": 6,
    "validation_metric": "-perplexity",
    //"gradient_accumulation_batch_size": 32,
    "optimizer": {
      "type": "bert_adam",
      "lr": 1e-4,
      "t_total": -1,
      "max_grad_norm": 1.0,
      "parameter_groups": [
        [["bias", "LayerNorm.bias", "LayerNorm.weight", "layer_norm.weight"], {"weight_decay": 0.0}]
      ]
    },
//		"learning_rate_scheduler": {
//				"type": "slanted_triangular",
//				"num_epochs": 35,
//				"num_steps_per_epoch": 1603
//		},
    "should_log_learning_rate": true
  }
}
